---
import Section from "@/components/Section.astro";
import { projects as cvprojects } from "@cv";
import { type Project } from "@/interfaces/resume.interface";
const projects = cvprojects as Project[];
---

{
    !!projects.length && (
        <Section title="Projects">
            {projects.length === 0 && <p>No public projects to show yet.</p>}
            {projects.length > 0 && (
                <ul>
                    {projects.map(({ name, description, url, highlights }) => (
                        <li>
                            <article>
                                <header>
                                    <a
                                        href={url}
                                        title={`View the project ${name}`}
                                    >
                                        <h3>{name}</h3>
                                    </a>
                                    <p>
                                        <p>{description}</p>
                                    </p>
                                </header>
                                <footer>
                                    {highlights.map((highlight) => (
                                        <span>{highlight}</span>
                                    ))}
                                </footer>
                            </article>
                        </li>
                    ))}
                </ul>
            )}
        </Section>
    )
}

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        display: flex;
        flex-direction: column;
        gap: 16px;
        height: 100%;
        padding: 16px;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: #111;
    }

    article a::hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.8rem;
        line-height: 1.2;
        margin-bottom: 4px;
    }

    article footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        display: inline-flex;
        background-color: #eee;
        border-radius: 6px;
        color: #333;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
