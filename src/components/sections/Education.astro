---
import Section from "@/components/Section.astro";
import { education } from "@cv";
---

<Section title="Education">
    <ul>
        {
            education.map(
                ({ institution, startDate, endDate, area, studyType, url }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear = endDate
                        ? new Date(endDate).getFullYear()
                        : "Present";
                    const duration = `${startYear} - ${endYear}`;

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <a href={url} target="_blank">
                                            <h3>{institution}</h3>
                                        </a>
                                        <h4>{area}</h4>
                                    </div>
                                    <time>{duration}</time>
                                </header>
                                <footer>
                                    <p>{studyType}</p>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: start;
    }

    time {
        font-size: 0.9em;
        color: #666;
    }
</style>
